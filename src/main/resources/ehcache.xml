<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'
        xsi:schemaLocation="
            http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>

    <!-- CART CACHE -->
    <cache alias="cartRegion">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">1800</ttl> <!-- 30 minutes -->
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
        </resources>
    </cache>

    <!-- ADDRESS CACHE -->
    <cache alias="addressRegion">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">3600</ttl>  <!-- 1 hour -->
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <!-- USER CACHE -->
    <cache alias="userRegion">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">1800</ttl>  <!-- 30 minutes -->
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <!-- CATEGORY CACHE -->
    <cache alias="categoryRegion">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">7200</ttl>  <!-- 2 hours -->
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache>

    <!-- ORDER CACHE -->
    <cache alias="orderRegion">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">900</ttl>  <!-- 15 minutes -->
        </expiry>
        <resources>
            <heap unit="entries">3000</heap>
        </resources>
    </cache>

    <!-- PRODUCT CACHE -->
    <cache alias="productRegion">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">1800</ttl>  <!-- 30 minutes -->
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
        </resources>
    </cache>

</config>
